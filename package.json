{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node -r esm -p 8080 ./bin/www",
    "devstart": "nodemon -r esm ./bin/www",
    "watch": "DEBUG=app:* npm run devstart & npm run watch-scss",
    "prod-stop": "pm2 stop serve.supun.xyz",
    "prod-delete": "pm2 stop serve.supun.xyz",
    "prod": "pm2 start ./bin/www --node-args='-r esm' --name serve.supun.xyz",
    "build-scss": "node-sass scss -o public/stylesheets",
    "watch-scss": "node-sass -w scss -o public/stylesheets",
    "up": "sh serve"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootstrap": "^4.3.1",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "email-templates": "^4.0.1",
    "esm": "^3.0.38",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "multer": "^1.3.0",
    "node-sass": "^6.0.1",
    "nodemailer": "^4.6.5",
    "pug": "2.0.0-beta11",
    "validator": "^10.2.0"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}
